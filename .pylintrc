[MESSAGES CONTROL]
# Disable only style/preference issues, keep real design warnings:
disable=missing-module-docstring,
        missing-class-docstring,
        missing-function-docstring,
        line-too-long,
        trailing-whitespace,
        missing-final-newline,
        wrong-import-order,
        unnecessary-lambda-assignment,
        superfluous-parens,
        consider-using-f-string,
        useless-return,
        redefined-builtin,
        no-else-return,
        no-else-raise,
        simplifiable-if-expression,
        simplifiable-if-statement,
        unused-argument,
        unnecessary-lambda

[FORMAT]
max-line-length=120

[DESIGN]
# Keep the defaults but show them explicitly:
max-args=5
max-attributes=7
max-branches=12
max-locals=15
max-public-methods=20
max-positional-arguments=5